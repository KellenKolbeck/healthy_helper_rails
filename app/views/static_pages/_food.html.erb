<table class="food">
  <tr>
    <th><%= link_to "Name", food_sort: "name" %></th>
    <th><%= link_to "Calories", food_sort: "calories"%></th>
    <th><%= link_to "Category", food_sort: "category" %></th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% for food in @foods  %>
  <tr>
    <td class='col-xs-1'><%= food.name %></td>
    <td class='col-xs-1'><%= food.calories %></td>
    <td class='col-xs-1'><%= food.category %></td>
    <td class='col-xs-1'><%= link_to "Edit Food", edit_food_path(food), id:"edit_food_button", remote: true %></td>
    <td class='col-xs-1'><%= link_to "Delete Food", food_path(food), :data => {confirm: "Are Your Sure?", method: "delete"} %></td>
  </tr>
  <% end %>
</table>


<%= will_paginate @foods %>





